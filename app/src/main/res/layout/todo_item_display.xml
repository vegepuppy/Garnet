<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <CheckBox
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/todo_display_cb"
        android:layout_width="0dp"/>

    <Button
        android:id="@+id/todo_display_attach_button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/todo_btn_add_24"
        android:padding="1dp" />
    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:background="@drawable/todo_btn_view_24"
        android:id="@+id/todo_display_view_attach_button" />
<!--        （·）这个符号表示眼睛，即查看-->

</LinearLayout>