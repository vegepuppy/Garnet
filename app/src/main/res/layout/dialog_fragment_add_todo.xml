<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_todo_dialog_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:text="创建待办"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:id="@+id/add_todo_dialog_edit"
        android:inputType="text"
        android:hint="请输入待办事项"
        android:maxLength="20"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_todo_dialog_edit"
        android:layout_alignStart="@+id/add_todo_dialog_edit"
        android:id="@+id/add_todo_limiter"
        android:text="0/20"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/add_todo_limiter"
        android:layout_margin="10dp"
        android:id="@+id/add_todo_date_button"
        android:text="选择日期"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/add_todo_date_button"
        android:id="@+id/add_todo_confirm_button"
        android:text="确定"
        />

</RelativeLayout>